@model HMS.Areas.Dashboard.ViewModels.AccomodationTypesListingViewModel

@if (Model != null && Model.AccomodationTypes != null && Model.AccomodationTypes.Count() > 0)
{
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var accomodationType in Model.AccomodationTypes)
            {
                <tr>
                    <td>@accomodationType.Name</td>
                    <td>@accomodationType.Description</td>
                    <td>
                        <button type="button" class="btn btn-primary actionButton" data-href="@Url.Action("Action", "AccomodationTypes", new { Id = accomodationType.Id})" data-toggle="modal" data-target="#actionModal"><i class="fas fa-pen mr-1"></i> Edit</button>
                        <button type="button" class="btn btn-danger actionButton" data-href="@Url.Action("Delete", "AccomodationTypes", new { Id = accomodationType.Id})" data-toggle="modal" data-target="#actionModal"><i class="fas fa-trash-alt mr-1"></i> Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else { 
    <div class="alert alert-warning" role="alert">
        Sorry ! No records exist. 
    </div>
}
