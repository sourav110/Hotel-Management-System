@model HMS.Areas.Dashboard.ViewModels.AccomodationTypesListingViewModel

@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-lg-12">
        <h2>Accomodation Types</h2>
        <hr />
    </div>
</div>

<div class="row mb-2">
    <div class="col-lg-12">
        <form>
            <div class="input-group">
                <input type="text" name="searchTerm" class="form-control" placeholder="Enter keywords to search" required>
                <div class="input-group-append">
                    <button class="btn btn-outline-primary" type="submit"><i class="fas fa-search mr-1"></i>Search</button>
                    <a class="btn btn-outline-secondary" href="@Url.Action("Index", "AccomodationTypes")"><i class="fas fa-redo-alt mr-1"></i>Reset</a>
                    <button class="btn btn-success actionButton" type="button" data-href="@Url.Action("Action", "AccomodationTypes")" data-toggle="modal" data-target="#actionModal"><i class="fas fa-plus mr-1"></i> Create</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        @{ Html.RenderPartial("_Listing", Model); }
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="actionModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        
    </div>
</div>

<script>
    $(".actionButton").click(function () {
        $.ajax({
            url: $(this).attr("data-href")
        })
        .done(function (response) {
            $("#actionModal .modal-dialog").html(response);
        });
    });
</script>

