@model HMS.Areas.Dashboard.ViewModels.UsersActionViewModel

@if (Model != null)
{
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="actionModalLabel">
                <span>Delete User</span>
            </h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form id="actionForm">
                <input type="hidden" name="Id" value="@Model.Id" />
            </form>

            <div class="alert alert-danger">
                Are you sure you want to delete this User?
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-danger" id="actionButton"><i class="fas fa-trash-alt mr-1"></i> Delete</button>
            <button type="button" class="btn btn-secondary" data-dismiss="modal"><i class="fas fa-times mr-1"></i> Close</button>
        </div>
    </div>
}

<script>
    $("#actionButton").click(function () {
        $.ajax({
            url: '@Url.Action("Delete", "Users")',
            type: "post",
            data: $("#actionForm").serialize()
        }).done(function (response) {
            if (response.Success) {
                window.location.href = '@Url.Action("Index", "Users")';
            }
            else {
                $(".errorDiv").html(response.Message)
            }
        });
    });
</script>
